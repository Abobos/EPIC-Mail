{
  "name": "EPIC-Mail",
  "version": "1.0.0",
  "description": "EPIC Mail is a web application that helps people exchange messages and informaion over the internet.",
  "main": "app.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test npm run migrate-db && cross-env NODE_ENV=test nyc mocha --require @babel/register ./src/Server/test/*.test.js --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start-dev": "nodemon --exec babel-node ./src/app.js",
    "start": "cross-env NODE_ENV=production npm run migrate && node build/app.js",
    "build": "babel src --out-dir build",
    "migrate": "node ./build/Server/database/table.js",
    "migrate-db": "babel-node ./src/Server/database/table.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abobos/EPIC-Mail.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Abobos/EPIC-Mail/issues"
  },
  "homepage": "https://github.com/Abobos/EPIC-Mail#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "nyc": "^13.3.0",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "mocha": "^6.0.2",
    "pg": "^7.9.0",
    "winston": "^3.2.1"
  }
}
